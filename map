from dataclasses import dataclass
import pygame, pytmx, pyscroll

@dataclass
class Portal:
    from_world: str
    origin_point: str
    target_world: str
    teleport_point: str

@dataclass
class Map:
    name: str
    walls: list[pygame.Rect]
    group: pyscroll.PyscrollGroup
    tmx_data: pytmx.TiledMap
    portals: list[Portal]

class MapManager:
    def __init__(self, screen, player):
        self.maps = dict()
        self.screen = screen
        self.player = player
        self.current_map = "monde"

        self.regiter_map("monde", portals=[
            Portal(from_world="monde", origin_point="enter_house", target_world="palais", teleport_point="spawn_house")
        ])
        self.regiter_map("palais", portals=[
            Portal(from_world="palais", origin_point="exit_house", target_world="monde", teleport_point="enter_house_exit"),
            Portal(from_world="palais", origin_point="enter_house2", target_world="Palais 1er étage",
                   teleport_point="spawn_p1er")
        ])

        self.regiter_map("Palais 1er étage", portals=[
            Portal(from_world="Palais 1er étage", origin_point="exit_p1er", target_world="palais",
                   teleport_point="exit_house2"),
            Portal(from_world="Palais 1er étage", origin_point="enterp3", target_world="deuxième étage palais",
                   teleport_point="spawnp2"),
            Portal(from_world="Palais 1er étage", origin_point="enterp32", target_world="deuxième étage palais",
                   teleport_point="spawnp2")
        ])

        self.regiter_map("deuxième étage palais", portals=[
            Portal(from_world="deuxième étage palais", origin_point="exitp3", target_world="Palais 1er étage",
                   teleport_point="spawn_p1er2"),
            Portal(from_world="deuxième étage palais", origin_point="enter_treasure", target_world="Palais 1er étage",
                   teleport_point="spawn_treasure"),
        ])

        self.teleport_player("player")

    def check_collisions(self):
        for portal in self.get_map().portals:
            if portal.from_world == self.current_map:
                point = self.get_object(portal.origin_point)
                rect = pygame.Rect(point.x, point.y, point.width, point.height)


                if self.player.feet.colliderect(rect):
                    copy_portal = portal
                    self.current_map = portal.target_world
                    self.teleport_player(copy_portal.teleport_point)

        for sprite in self.get_group().sprites():
            if sprite.feet.collidelist(self.get_walls()) > -1:
                sprite.move_back()

    def teleport_player(self, name):
        point = self.get_object(name)
        self.player.position[0] = point.x
        self.player.position[1] = point.y
        self.player.save_location()

    def regiter_map(self, name, portals=[]):
        map = "monde"

        # Charger la carte clasique
        tmx_data = pytmx.util_pygame.load_pygame(f"{name}.tmx")
        map_data = pyscroll.data.TiledMapData(tmx_data)
        map_layer = pyscroll.orthographic.BufferedRenderer(map_data, self.screen.get_size())
        map_layer.zoom = 2

        # Les collisions
        walls = []

        for obj in tmx_data.objects:
            if obj.type == "collision":
                walls.append(pygame.Rect(obj.x, obj.y, obj.width, obj.height))

        # Dessiner les différents calques
        group = pyscroll.PyscrollGroup(map_layer=map_layer, default_layer=1)
        group.add(self.player)

        self.maps[name] = Map(name, walls, group, tmx_data, portals)

    def get_map(self): return self.maps[self.current_map]

    def get_group(self): return self.get_map().group

    def get_walls(self): return self.get_map().walls

    def get_object(self, name): return self.get_map().tmx_data.get_object_by_name(name)

    def draw(self):
        self.get_group().draw(self.screen)
        self.get_group().center(self.player.rect.center)

    def update(self):
        self.get_group().update()
        self.check_collisions()
